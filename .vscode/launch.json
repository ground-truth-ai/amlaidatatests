    "version": "0.2.0",
    "configurations": [
        {"name":"Python Debugger: Module",
        "type":"debugpy",
        "request":"launch",
        "module":"pytest",
        "args": ["--pyargs", "amlaidatatests.tests", "--connection_string=duckdb://duckdb.ddb", "--id=1234", "tests"],
        "justMyCode": false,
        "env": {"PYTEST_ADDOPTS": "--no-cov  --disable-pytest-warnings --html=report.html --self-contained-html"}
    },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {"PYTEST_ADDOPTS": "--no-cov --disable-pytest-warnings --disable-pytest-warnings --html=report.html --self-contained-html"}
          }
    ]
}
